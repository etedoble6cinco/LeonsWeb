@model List<LeonsWeb.Models.ViewModel.QuoteViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                NameQuote
            </th>
            <th>
                AmoutToDiscountQuote
            </th>
            <th>
                AmountTaxQuote
            </th>
            <th>
                FinalPrice
            </th>
            <th>
                IsTaked
            </th>
            <th>
                PercentToDiscount
            </th>
            <th>
                ServiceTypeToShow
            </th>
            <th>
               Comment
            </th>
            <th>
                 Service
            </th>
            <th>
                 Promo
            </th>
            <th></th> 
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameQuote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmoutToDiscountQuote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountTaxQuote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsTaked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PercentToDiscount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceTypeToShow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PromoId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
