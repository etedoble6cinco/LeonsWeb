@model IEnumerable<LeonsWeb.Models.Quote>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameQuote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmoutToDiscountQuote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountTaxQuote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsTaked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PercentToDiscount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceTypeToShow)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Promo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameQuote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmoutToDiscountQuote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountTaxQuote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsTaked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PercentToDiscount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceTypeToShow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Promo.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
